@model List<ConstructionManagementPresentation.Models.Worker>

<h1>Workers</h1>

<a asp-action="Create" class="btn btn-primary">Create New Worker</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Role</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var worker in Model)
        {
            <tr>
                <td>@worker.Id</td>
                <td>@worker.Name</td>
                <td>@worker.Role.ToString()</td> 
                <td>@worker.Email</td>
                <td>@worker.PhoneNumber</td>
                <td>
                    <a asp-action="Details" asp-route-id="@worker.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@worker.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@worker.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
