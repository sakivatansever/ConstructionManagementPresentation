
@using ConstructionManagementPresentation.Extantions
@using ConstructionManagementPresentation.Models.Enum
@model ConstructionManagementPresentation.Models.Worker

@{
    ViewData["Title"] = "Edit";
}



<h1>Edit Worker</h1>

<form asp-action="Edit"  asp-controller="Workers" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
        <div class="form-group">
    <label asp-for="Role"></label>
<div class="form-group">
        <label asp-for="Role"></label>
        <select asp-for="Role" class="form-control">
            <option value="">Select Role</option>
            @foreach (Role role in Enum.GetValues(typeof(Role)))
            {
                var selected = Model.Role == role ? "selected" : "";
                <text>
                    <option value="@((int)role)" >@role</option>
                </text>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div>
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
